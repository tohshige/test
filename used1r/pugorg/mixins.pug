//-item img header
mixin itemImg(itemName,right)
  img.item_title(src='img/'+ itemName +'_title.png')
  .col_img
  if right
    // 右寄せなら 左マージン追加
    iframe(scrolling='no', src='frame_'+ itemName +'.html', style='margin-left:490px')
  else
    iframe(scrolling='no', src='frame_'+ itemName +'.html')

